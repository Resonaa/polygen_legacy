<!DOCTYPE html>
<html lang="zh">

<head>
    <title>游戏 - polygen</title>

    {{> prelude }}

    {{> renderer }}

    <link href="/css/game_core.min.css" rel="stylesheet">
    <script src="https://down.52pojie.cn/.fancyindex/js/phaser.min.js"></script>
    <script src="https://down.52pojie.cn/.fancyindex/js/catch-the-cat.js"></script>
    <script src="/js/game_core.min.js"></script>

    <script>
        const username = "{{ username }}", identity = "{{ identity }}";
    </script>
</head>

<body>
    <div class="ui main stackable grid container">
        <div class="twelve wide column">
            <div id="catch-the-cat"></div>
        </div>
        <div class="four wide column">
            <div class="ui inverted tabular pointing secondary menu">
                <a class="item active" data-tab="chat">聊天区</a>
                <a class="item" data-tab="players">玩家列表</a>
                <a class="item" data-tab="info">房间信息</a>
            </div>
            <div class="ui inverted tab segment active" data-tab="chat">
                <div class="ui inverted minimal comments">
                    {{> game_chat }}
                </div>

                <form class="ui form">
                    <div class="field">
                        <textarea rows="3"></textarea>
                    </div>
                    <div class="inline field">
                        <div class="ui inverted selection dropdown">
                            <input type="hidden" id="target" value="RoomMessage">
                            <i class="dropdown icon"></i>
                            <div class="default text">发送至</div>
                            <div class="menu">
                                <div class="item world-message" data-value="WorldMessage">世界</div>
                                <div class="item room-message" data-value="RoomMessage">房间</div>
                                <div class="item team-message" data-value="TeamMessage">队伍</div>
                                <div class="item directed-message" data-value="DirectedMessage">定向</div>
                            </div>
                        </div>

                        <div class="ui primary inverted submit button">发送</div>
                    </div>
                </form>
            </div>
            <div class="ui inverted tab segment" data-tab="players">
                <p>content two</p>
            </div>
            <div class="ui inverted tab segment" data-tab="info">
                <p>content three</p>
            </div>
        </div>
    </div>
</body>

</html>