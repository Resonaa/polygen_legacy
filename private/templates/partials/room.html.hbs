<script id="room-template" type="text/template">
    <article class="room">
        <a href="/game/${rid}" class="room-header header-${status}">
            ${mode} - ${map}
            
            <span class="badge bg-${status}">
                {@if status == "ongoing"}
                游戏中
                {@else}
                准备中
                {@/if}
            </span>
        </a>

        <div class="room-content">
            $${players}
        </div>
    </article>
</script>