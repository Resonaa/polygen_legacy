<!DOCTYPE html>
<html lang="zh">

<head>
    <title>首页 - polygen</title>

    {{> prelude }}

    {{> renderer }}

    {{> editor }}

    <link href="/css/post.min.css" rel="stylesheet">

    <script src="/js/sidebar.min.js"></script>
    <link href="/css/sidebar.min.css" rel="stylesheet">

    <script src="/js/index.min.js"></script>
</head>

<body class="container-fluid">
    {{> nav }}

    <div class="row">
        <div class="col">
            <div class="polygen-item">
                <h5 class="module">公告</h5>
                <div id="announcement">
                    <div class="spinner-border"></div>

                    {{> announcement}}
                </div>
            </div>
        </div>

        <div id="main-part" class="col-sm-7">
            <div class="polygen-item">
                <div id="editor-container" style="height: 170px">
                    <div id="post-editor"></div>
                </div>

                <button id="post" class="btn btn-primary mt-2">发布说说</button>
            </div>

            {{> post}}

            <div id="load-more" class="polygen-item">
                <a class="loader no-href"></a>
            </div>
        </div>

        <div class="col-sm">
            <div class="polygen-item">
                <h5 class="module">最新回放</h5>
                <div id="replay">
                    暂无数据
                </div>
            </div>
        </div>
    </div>
</body>

</html>