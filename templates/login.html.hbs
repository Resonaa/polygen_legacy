<!DOCTYPE html>
<html>

<head>
    <title>登录 - polygen</title>
    <link href="https://cdn.staticfile.org/twitter-bootstrap/5.1.1/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.staticfile.org/twitter-bootstrap/5.1.1/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.staticfile.org/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://cdn.staticfile.org/jquery-toast-plugin/1.3.2/jquery.toast.min.js"></script>
    <link href="https://cdn.staticfile.org/jquery-toast-plugin/1.3.2/jquery.toast.min.css" rel="stylesheet">
    <script src="js/login.js"></script>
    <script>
        function toast(status, heading, text, time = 1000, afterHidden = () => { }) {
            $.toast({
                text: text,
                heading: heading,
                icon: status,
                showHideTransition: 'slide',
                hideAfter: time,
                position: 'bottom-right',
                afterHidden: afterHidden
            });
        }
    </script>
</head>

<body>
    <header class="p-3 mb-3 border-bottom">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-dark text-decoration-none">
                    <img src="img/polygen.png" />
                </a>
            
            <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li><a href="/login" class="nav-link px-2 link-dark disabled">登录</a></li>
                    <li><a href="/register" class="nav-link px-2 link-dark">注册</a></li>
                </ul>
            </div>
        </div>
    </header>
    <div id="container" class="container mt-3">
        <h2>登录</h2>
        <form id="login">
            <div class="mb-3 mt-3">
                <input id="username" type="username" class="form-control" placeholder="用户名" name="username">
            </div>
            <div class="mb-3">
                <input id="password" type="password" class="form-control" placeholder="密码" name="password">
            </div>
            <input id="submit" type="button" value="登录" class="btn btn-primary">
        </form>
    </div>
</body>

</html>